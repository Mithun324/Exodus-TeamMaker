@model TeamMaker_WebApp.Models.Player

<h2>Are you sure you want to delete this player?</h2>
<p><strong>Player Name:</strong> @Model.PlayerName</p>
<p><strong>Position:</strong> @Model.Position</p>
<p><strong>Jersey Number:</strong> @Model.Number</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PlayerId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
